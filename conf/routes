# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HtmlController.showArticleListScreen
GET     /article/view/:id           controllers.HtmlController.viewArticle(id: String)

GET     /article                    controllers.ArticleController.getAll()
GET     /article/:id               controllers.ArticleController.getById(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)