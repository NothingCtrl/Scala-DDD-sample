# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.HtmlController.showArticleListScreen
GET     /article/view/:id           @controllers.HtmlController.viewArticle(id: String)

GET     /article                    @sep.com.bbs.application.ArticleController.list()
GET     /article/:id                @sep.com.bbs.application.ArticleController.getById(id: String)
POST     /article/add               @sep.com.bbs.application.ArticleController.saveArticle()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)